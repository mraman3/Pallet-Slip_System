{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Runtime Target
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",

    // Node environment
    "types": ["node"],
    "skipLibCheck": true,

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Safety
    "strict": true,
    "esModuleInterop": true,

    // REMOVE React + frontend only things
    "isolatedModules": false,
    "jsx": "preserve",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
